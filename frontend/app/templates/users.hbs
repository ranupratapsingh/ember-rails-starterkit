<div class="row">
  <div class="col-md-8">
    <h2>{{#link-to 'users'}}Listing The Users{{/link-to}}</h2>
    <table class="table table-bordered">
      <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Actions</td>
      </tr>
      {{#each list}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>
            {{#link-to 'users.show' this class='btn-show'}}View{{/link-to}}
            {{#link-to 'users.edit' this class='btn-edit'}}Edit{{/link-to}}
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
  <div class="col-md-4">
    {{outlet}}
  </div>
</div>